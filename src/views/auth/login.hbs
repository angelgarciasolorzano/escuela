{{#*inline "styles"}}
  <link rel="stylesheet" href="/css/login.css">
{{/inline}}

{{#> main}}
  {{{ styles }}}
  <section class="contenedor-section">
    <header class="header-login">
      <a class="logo-login">Colegio Cristiano Fuente de Vida</a>
      <nav class="navbar-login">
        <a href="/">Inicio</a>
      </nav>
    </header>
    <div class="contenedor-login">
      <div class="content">
        <h2>Bienvenido</h2>
        <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Veritatis odit dolorum, minus ipsam numquam ipsum, velit ut harum nostrum quae, porro repellat? <em>Quis nulla unde deserunt velit numquam voluptatum ab!</em></p>
      </div>
      <div class="login">
        <form action="/login" method="post">
          <h2>Iniciar Sesion</h2>
          <div class="inputbox">
            <i class="bi bi-envelope"></i>
            <input type="text" id="login-usuario" autocomplete="off" name="usuario" required>
            <label for="">Email</label>
          </div>
          <div class="inputbox">
            <i class="ri-eye-line" id="login-eye"></i>
            <input type="text" id="login-pass" autocomplete="off" name="contra" required>
            <label for="">Contrase√±a</label>
          </div>
          <div class="select-menu">
            <div class="select-btn">
              <input class="sBtn-text" id="login-cargo" name="cargo" autocomplete="off" placeholder="Selecionar cargo"></input>
              <i class="bi bi-chevron-down"></i>
            </div>
            <ul class="options">
              <li class="option">
                <i class="bi bi-person-fill-gear"></i>
                <span class="option-text">Administrador</span>
              </li>
              <li class="option">
                <i class="bi bi-person-video3"></i>
                <span class="option-text">Profesor</span>
              </li>
              <li class="option">
                <i class="bi bi-people-fill"></i>
                <span class="option-text">Secretaria</span>
              </li>
            </ul>
          </div>
          <button type="submit" class="sesion">Acceder</button>
       </form>
      </div>
    </div>
  </section>
  <script src="/event/loginform.js"></script>
{{/main}}