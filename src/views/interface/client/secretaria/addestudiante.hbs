<link rel="stylesheet" href="/css/addestudiante.css">
<div class="container p-2 border-secondary contenedor-alerta">
    <div class="card border-secundary">
        <div class="card-header color-background">
            <h1 class="text-center text-white">Registrar Estudiantes</h1>
        </div>
        <div class="card-body">
            <form class="form">
                <!-- Steps-Icons -->
                <div class="container_icon">
                    <i class="fa-regular fa-id-card"></i>
                    <i class="fa-solid fa-restroom"></i>
                    <i class="fa-solid fa-children"></i>
                    <i class="fa-solid fa-circle-check"></i>
                </div>
                <!-- Progress bar -->
                <div class="progressbar">
                    <div class="progress" id="progress"></div>
                    <div class="progress-step progress-step-active" data-title="Documentos"></div>
                    <div class="progress-step" data-title="Tutor"></div>
                    <div class="progress-step" data-title="Estudiante"></div>
                    <div class="progress-step" data-title="Resultado"></div>
                </div>
                <!-- Step-Documentos -->
                <div class="form-step form-step-active">
                    <div class="d-grid justify-content-center p-2 text-black" id="form1" novalidate>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="doc-partida-nac" required>
                            <label class="form-check-label ms-3 py-1" for="flexCheckChecked">Partida de Nacimiento:
                                Original y Copia
                            </label>
                            <div class="invalid-feedback ms-3">
                                Este documento es obligatorio!
                            </div>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="doc-boletin" required>
                            <label class="form-check-label ms-3 py-1" for="flexCheckChecked">Boletin: Original y
                                Copia
                            </label>
                            <div class="invalid-feedback ms-3">
                                Este documento es obligatorio!
                            </div>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="doc-cedula" required>
                            <label class="form-check-label ms-3 py-1" for="flexCheckChecked">Cedula del Tutor</label>
                            <div class="invalid-feedback ms-3">
                                Este documento es obligatorio!
                            </div>
                        </div>
                    </div>
                    <div class="container pt-4">
                        <a href="#" class="btn btn-next width-50 ml-auto" id="btn_documento">Siguiente</a>
                    </div>
                </div>
                <!-- Step-Tutor -->
                <div class="form-step">
                    <div class="row g-3" id="form-tutor">
                        <div class="col-md-6 position-relative">
                            <label for="inputText" class="form-label">Nombres:</label>
                            <input name="nombres" type="text" class="form-control border border-secondary"
                                id="nombres-tutor" placeholder="Juan Pablo" required>
                            <div class="invalid-tooltip">
                                Error!
                            </div>
                        </div>
                        <div class="col-md-6 position-relative">
                            <label for="inputText" class="form-label">Apellidos:</label>
                            <input name="apellidos" type="text" class="form-control border-secondary"
                                id="apellidos-tutor" placeholder="Zamora Ulises" required>
                            <div class="invalid-tooltip">
                                Error!
                            </div>
                        </div>
                        <div class="col-md-6 position-relative">
                            <label for="inputText" class="form-label">Cédula:</label>
                            <input name="cedula" type="text" class="form-control border-secondary" id="cedula-tutor"
                                placeholder="000-011280-0000B" required>
                            <div class="invalid-tooltip">
                                Error!
                            </div>
                        </div>
                        <div class="col-md-6 position-relative">
                            <label for="inputAddress" class="form-label">Correo-e:</label>
                            <input name="correo_e" type="text" class="form-control border-secondary" id="correo-tutor"
                                placeholder="juan_pablo12@gmail.com" required>
                            <div class="invalid-tooltip">
                                ¡Error!
                            </div>
                        </div>
                        <div class="col-md-6 position-relative">
                            <label for="inputState" class="form-label">Género:</label>
                            <select name="sexo" id="sexo-tutor" class="form-select border border-secondary">
                                <option selected disabled value="">Elegir...</option>
                                <option value="M">Masculino</option>
                                <option value="F">Femenino</option>
                            </select>
                            <div class="invalid-tooltip">
                                ¡Error!
                            </div>
                        </div>
                        <div class="col-md-6 position-relative">
                            <label for="inputNumber" class="form-label">Teléfono:</label>
                            <input name="telefono" type="text" class="form-control border-secondary" id="telefono-tutor"
                                placeholder="84125477" required>
                            <div class="invalid-tooltip">
                                ¡Error!
                            </div>
                        </div>
                        <div class="col-12 position-relative">
                            <label for="inputText" class="form-label">Dirección:</label>
                            <input name="direccion" type="text" class="form-control border-secondary"
                                id="direccion-tutor" placeholder="municipio, distrito-barrio, casa#" required>
                            <div class="invalid-tooltip">
                                ¡Error!
                            </div>
                        </div>
                    </div>
                    <div class="btns-group pt-5">
                        <a href="#" class="btn btn-prev">Atras</a>
                        <a href="#" class="btn btn-next" id="btn_tutor">Siguiente</a>
                    </div>
                </div>
                <!-- Step-Estudiante -->
                <div class="form-step">
                    <div class="container w-100 p-0">
                        <div id="mostrar-error"></div>
                    </div>
                    <div class="row g-3" id="form-estudiante">
                        <div class="col-md-6 position-relative">
                            <label for="inputText" class="form-label">Nombres:</label>
                            <input name="nombres" type="text" class="form-control border-secondary" id="nombres-est"
                                placeholder="Jennifer Sofia">
                            <div class="invalid-tooltip">
                                ¡Error!
                            </div>
                        </div>
                        <div class="col-md-6 position-relative">
                            <label for="inputText" class="form-label">Apellidos:</label>
                            <input name="apellidos" type="text" class="form-control border-secondary" id="apellidos-est"
                                placeholder="Fernandez Ortiz">
                            <div class="invalid-tooltip">
                                ¡Error!
                            </div>
                        </div>
                        <div class="col-md-4 position-relative">
                            <label for="inputText" class="form-label">#Registro de Nacimiento:</label>
                            <input name="registroNac" type="text" class="form-control border-secondary"
                                id="registroNac-est" placeholder="#Tomo-#Folio-#Partida">
                            <div class="invalid-tooltip">
                                ¡Error!
                            </div>
                        </div>
                        <div class="col-md-4 position-relative">
                            <label for="inputDate" class="form-label">Fecha de Nacimiento:</label>
                            <input name="fechaNac" type="date" class="form-control border-secondary" id="fecha-est">
                            <div class="invalid-tooltip">
                                ¡Error!
                            </div>
                        </div>
                        <div class="col-md-4 position-relative">
                            <label for="inputState" class="form-label">Género:</label>
                            <select class="form-select border-secondary" name="sexo_value" id="sexo-est">
                                <option selected disabled value="">Elegir...</option>
                                <option value="M">Masculino</option>
                                <option value="F">Femenino</option>
                            </select>
                            <div class="invalid-tooltip">
                                ¡Error!
                            </div>
                        </div>
                        <div class="col-md-6 position-relative">
                            <label for="inputState" class="form-label">Modalidad:</label>
                            <select class="form-select border-secondary" name="modalidad_value" id="modalidad-est">
                                <option selected disabled value="">Elegir...</option>
                                {{#if modalidad}}
                                {{#each modalidad}}
                                <option value={{this.id_modalidad}}>{{this.nombre}}</option>
                                {{/each}}
                                {{/if}}
                            </select>
                            <div class="invalid-tooltip">
                                ¡Error!
                            </div>
                        </div>
                        <div class="col-md-6 position-relative">
                            <label for="inputState" class="form-label">Nivel/Grado Actual:</label>
                            <select class="form-select border-secondary" name="nivel_value" id="nivel-est" disabled>
                                <option selected disabled value="">Elegir...</option>
                            </select>
                            <div class="invalid-tooltip">
                                ¡Error!
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center pt-5">
                        <button type="button" class="btn btn-block" id="btn-addestudiante">+ Estudiante</button>
                    </div>
                    <div class="container w-100 pt-4">
                        <div class="d-flex flex-column">
                            <div id="cargar-estudiantes"></div>
                        </div>
                    </div>
                    <div class="btns-group pt-5">
                        <a href="#" class="btn btn-prev">Atras</a>
                        <input type="submit" value="Ingresar Datos" class="btn" id="btn_registrar" />
                    </div>
                </div>
                <!-- Step-Completado -->
                <div class="form-step">
                    <div class="container d-flex flex-column justify-content-center text-center text-black m-30">
                        <h2 class="pt-2">Los datos se ingresaron correctamente!!</h2>
                        <a href="/secretaria/registro/estudiante" type="button" class="btn btn-block pt-3"
                            id="btn-recargar">Regresar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal" tabindex="-1" id="modal-message" data-bs-backdrop="static" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm" style="border-radius: 2px;">
        <div class="modal-content">
            <div class="modal-body border border-secondary" style="background-color: #17171c;">
                <div class="container-fluid">
                    <div class="row">
                        <div class="text-center">
                            <i class="fa-solid fa-triangle-exclamation"
                                style="color: rgb(244, 197, 5); font-size: 80px;"></i>
                        </div>
                        <div class="py-3" style="color: white;">
                            <div class="text-center">
                                <h2>¿Estás Seguro?</h2>
                            </div>
                            <div class="text-center">
                                <strong>¿Deseas efectuar el registro?</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer border border-secondary" style="background-color:  #5dade2">
                <button type="button" class="btn btn-danger mx-auto w-30px" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary mx-auto w-30px" data-bs-dismiss="modal" id="btn-modal-aceptar">Aceptar</button>
            </div>
        </div>
    </div>
</div><!-- modal-message -->
<script src="https://cdn.datatables.net/v/bs5/jq-3.7.0/dt-2.0.8/r-3.0.2/sl-2.0.3/datatables.min.js"></script>
