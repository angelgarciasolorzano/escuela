<div class="container">
  <div class="row mt-5">
    <h3 class="text-center text-uppercase p-2">Lista de personas</h3>
    
    {{#if estudiantes}}
    <table class="table text-center">
      <thead class="table-dark">
        <tr>
          <th scope="col">Nombre</th>
          <th scope="col">Apellido</th>
          <th scope="col">Direcci贸n</th>
          <th scope="col">Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each estudiantes}}
        <tr>
          <td>{{nombre}}</td>
          <td>{{apellidos}}</td>
          <td>{{direccion}}</td>
          <td>
            <div class="btn-group">
              <a href="/edit/{{id}}" class="btn btn-warning p-2" title="Editar"><i class="bi bi-pencil"></i></a>
              <a href="/delete/{{id}}" class="btn btn-danger p-2" title="Eliminar"><i class="bi bi-trash"></i></a>
            </div>
          </td>
        </tr>
        {{/each}}
      </tbody>
      <tfoot class="table-dark text-center">
        <tr>
          <td colspan="4">
            <!-- Botones de paginaci贸n -->
            <nav aria-label="Page navigation example">
              <ul class="pagination justify-content-center">
                {{#if hasPrevPage}}
                <li class="page-item">
                  <a class="page-link" href="?page={{prev currentPage}}" aria-label="Anterior">
                    <span aria-hidden="true">&laquo;</span>
                  </a>
                </li>
                {{/if}}

                {{#each pages}}
                <li class="page-item {{#ifCond this ../currentPage}}active{{/ifCond}}">
                  <a class="page-link" href="?page={{this}}">{{this}}</a>
                </li>
                {{/each}}

                {{#if hasNextPage}}
                <li class="page-item">
                  <a class="page-link" href="?page={{next currentPage}}" aria-label="Siguiente">
                    <span aria-hidden="true">&raquo;</span>
                  </a>
                </li>
                {{/if}}
              </ul>
            </nav>
          </td>
        </tr>
      </tfoot>
    </table>
    {{else}}
    <div class="card text-center mx-auto" style="width: 350px;">
      <div class="card-header">
        <h3>Debes crear una persona</h3>
      </div>
      <div class="card-body">
        <p>Presiona este bot贸n para registrar a una persona en la aplicaci贸n</p>
        <a href="#" class="btn btn-primary">Ir a crear</a>
      </div>
    </div>
    {{/if}}
  </div>
</div>
