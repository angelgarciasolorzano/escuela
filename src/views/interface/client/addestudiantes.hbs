<div class="contenedor-todo">
  <div class="contenedor">
    <div class="contenedor-titulo">
      <span>Registro de Estudiantes</span>
    </div>
    <div class="contenedor-form">
      <div class="container">
        <div class="title">
          <i class="bi bi-backpack3"></i>
          <span>Estudiante</span>
        </div>
        <form id="form-validation" action="" method="post">
          <div class="form-group">
            <i class="bi bi-person"></i>
            <label for="">Nombres</label>
            <input type="text" id="add-nombre" name="nombre" class="form-control" placeholder="Nombre">
          </div>
          <div class="form-group">
            <i class="bi bi-person-add"></i>
            <label for="">Apellidos</label>
            <input type="text" id="add-apellidos" name="apellidos" class="form-control" placeholder="Apellidos">
          </div>
          <div class="form-group">
            <i class="bi bi-house-door"></i>
            <label for="">Direccion</label>
            <input type="text" id="add-direccion" name="direccion" class="form-control" placeholder="Direccion">
          </div>
          <div class="form-group">
            <i class='bx bx-donate-blood'></i>
            <label for="">Edad</label>
            <input type="text" id="add-edad" name="edad" class="form-control" placeholder="Edad">
          </div>
          <div class="form-group">
            <i class="bi bi-gender-ambiguous"></i>
            <label for="">Seleccionar Genero</label>
            <div class="radio">
              <label for="">Hombre</label>
              <input type="radio" value="M" name="sexo" checked>
              <label for="">Mujer</label>
              <input type="radio" value="F" name="sexo">
            </div>
          </div>
          <div class="boton-estudiantes">
            <button class="ingresar" type="submit">Registrar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="/event/addestudiantes.js"></script>