<link rel="stylesheet" href="/css/client/addestudiantes.css">
<div class="contenedor-todo">
  <div class="contenedor">
    <div class="contenedor-titulo">
      <span>Registro de Estudiantes</span>
    </div>
    <div class="contenedor-form">
      <div class="container">
        <div class="title">
          <i class="bi bi-backpack3"></i>
          <span>Estudiante</span>
        </div>
        <form id="form-validation" action="">
          <div class="form-group">
            <i class="bi bi-person"></i>
            <label for="">Nombres</label>
            <input type="text" id="add-nombre" name="nombre" value="" class="form-control" placeholder="Nombre">
          </div>
          <div class="form-group">
            <i class="bi bi-person-add"></i>
            <label for="">Apellidos</label>
            <input type="text" id="add-apellidos" name="apellidos" value="" class="form-control" placeholder="Apellidos">
          </div>
          <div class="form-group">
            <i class="bi bi-house-door"></i>
            <label for="">Direcci√≥n</label>
            <input type="text" id="add-direccion" name="direccion" value="" class="form-control" placeholder="Barrio">
          </div>
          <div class="form-group">
            <i class='bx bx-calendar'></i>
            <label for="">Fecha de Nacimiento</label>
            <input type="date" id="add-fechaNac" name="fechaNac" value="" class="form-control" placeholder="FechaNac">
          </div>
          <div class="form-group">
            <i class="bi bi-gender-ambiguous"></i>
            <label for="">Seleccionar Genero</label>
            <div class="radio">
              <label for="">Masculino</label>
              <input type="radio" value="Masculino" name="sexo" checked>
              <label for="">Femenino</label>
              <input type="radio" value="Femenino" name="sexo">
            </div>
          </div>
          <div class="form-group">
            <i class='bx bx-universal-access'></i>
            <label for="">Estado</label>
            <div class="radio">
              <label for="">Activo</label>
              <input type="radio" value="Activo" name="activo" checked>
            </div>
          </div>
          <div class="boton-estudiantes">
            <button class="ingresar" type="submit">Registrar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="/event/addestudiantes.js"></script>