<link rel="stylesheet" href="/css/addestudiante.css">
<div class="container p-2 border-secondary contenedor-alerta">
    <div class="card border-secundary">
        <div class="card-header color-background">
            <h1 class="text-center text-white">Registrar Estudiantes</h1>
        </div>
        <div class="card-body">
            <form action="#" class="form" id="form-registro">
                <div class="container_icon">
                    <i class="fa-regular fa-id-card"></i>
                    <i class="fa-solid fa-restroom"></i>
                    <i class="fa-solid fa-children"></i>
                    <i class="fa-solid fa-circle-check"></i>
                </div>
                <!-- Progress bar -->
                <div class="progressbar">
                    <div class="progress" id="progress"></div>
                    <div class="progress-step progress-step-active" data-title="Documentos"></div>
                    <div class="progress-step" data-title="Tutor"></div>
                    <div class="progress-step" data-title="Estudiante"></div>
                    <div class="progress-step" data-title="Resultado"></div>
                </div>

                <!-- Step-Documentos -->
                <div class="form-step form-step-active">
                    <div class="d-grid justify-content-center p-2 text-black" id="form1" novalidate>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="doc-partida-nac" required>
                            <label class="form-check-label ms-3 py-1" for="flexCheckChecked">Partida de Nacimiento:
                                Original y Copia
                            </label>
                            <div class="invalid-feedback ms-3">
                                Este documento es obligatorio!
                            </div>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="doc-boletin" required>
                            <label class="form-check-label ms-3 py-1" for="flexCheckChecked">Boletin: Original y
                                Copia
                            </label>
                            <div class="invalid-feedback ms-3">
                                Este documento es obligatorio!
                            </div>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="doc-cedula" required>
                            <label class="form-check-label ms-3 py-1" for="flexCheckChecked">Cedula del Tutor</label>
                            <div class="invalid-feedback ms-3">
                                Este documento es obligatorio!
                            </div>
                        </div>
                        <div class="container pt-4">
                            <a href="#" class="btn btn-next width-50 ml-auto" id="btn_documento">Siguiente</a>
                        </div>
                    </div>
                </div>
                <!-- Step-Tutor -->
                <div class="form-step">
                    <div class="row g-3" id="form-tutor">
                        <div class="col-md-6 position-relative">
                            <label for="inputText" class="form-label">Nombres:</label>
                            <input name="nombres_tutor" type="text" class="form-control border-secondary"
                                id="nombres-tutor" placeholder="Juan Pablo" required>
                            <div class="invalid-tooltip">
                                Campo vacio!
                            </div>
                        </div>
                        <div class="col-md-6 position-relative">
                            <label for="inputText" class="form-label">Apellidos:</label>
                            <input name="apellidos_tutor" type="text" class="form-control border-secondary"
                                id="apellidos-tutor" placeholder="Zamora Ulises" required>
                            <div class="invalid-tooltip">
                                Campo vacio!
                            </div>
                        </div>
                        <div class="col-12 position-relative">
                            <label for="inputAddress" class="form-label">Correo-e:</label>
                            <input name="correo_tutor" type="text" class="form-control border-secondary"
                                id="correo-tutor" placeholder="juan_pablo12@gmail.com" required>
                            <div class="invalid-tooltip">
                                Campo vacio!
                            </div>
                        </div>
                        <div class="col-md-6 position-relative">
                            <label for="inputText" class="form-label">Cedula:</label>
                            <input name="cedula_tutor" type="text" class="form-control border-secondary"
                                id="cedula-tutor" placeholder="000-011280-0000B" required>
                            <div class="invalid-tooltip">
                                Campo vacio!
                            </div>
                        </div>
                        <div class="col-md-6 position-relative">
                            <label for="inputNumber" class="form-label">Telefono:</label>
                            <input name="telefono_tutor" type="text" class="form-control border-secondary"
                                id="telefono-tutor" placeholder="84125477" required>
                            <div class="invalid-tooltip">
                                Campo vacio!
                            </div>
                        </div>
                        <div class="col-12 position-relative">
                            <label for="inputText" class="form-label">Dirección:</label>
                            <input name="direccion_tutor" type="text" class="form-control border-secondary"
                                id="direccion-tutor" placeholder="municipio, distrito-barrio, casa#" required>
                            <div class="invalid-tooltip">
                                Campo vacio!
                            </div>
                        </div>
                    </div>
                    <div class="btns-group pt-5">
                        <a href="#" class="btn btn-prev">Atras</a>
                        <a href="#" class="btn btn-next" id="btn_tutor">Siguiente</a>
                    </div>
                </div>
                <!-- Step-Estudiante -->
                <div class="form-step" id="form-estudiante">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="inputEmail4" class="form-label">Nombres:</label>
                            <input name="nombres_est" type="text" class="form-control border-secondary" id="nombres-est"
                                placeholder="Nombre del Estudiante">
                        </div>
                        <div class="col-md-6">
                            <label for="inputPassword4" class="form-label">Apellidos:</label>
                            <input name="apellidos_est" type="text" class="form-control border-secondary"
                                id="apellidos-est" placeholder="Apellidos del Estudiante">
                        </div>
                        <div class="col-md-6">
                            <label for="inputEmail4" class="form-label">Fecha de Nacimiento:</label>
                            <input name="fecha_est" type="date" class="form-control border-secondary" id="fecha-est">
                        </div>
                        <div class="col-md-6">
                            <label for="inputState" class="form-label">Género:</label>
                            <select name="sexo_est" id="sexo_est" class="form-select border-secondary">
                                <option value="M">Masculino</option>
                                <option value="F">Femenino</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="inputState" class="form-label">Nivel/Grado Actual:</label>
                            <select name="grado_est" id="grado_est" class="form-select border-secondary">
                                <option value="">Primer Grado</option>
                                <option value="">Segundo Grado</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="inputState" class="form-label">Estado:</label>
                            <select name="estado_est" id="estado_est" class="form-select border-secondary" disabled>
                                <option value="Activo">Activo</option>
                                <option value="Inactivo">Inactivo</option>
                            </select>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center pt-5">
                        <button type="button" class="btn btn-block" id="btn-addestudiante">+ Estudiante</button>
                    </div>
                    <div class="container w-100 pt-4">
                        <div class="d-flex flex-column">
                            <div id="cargar-estudiantes"></div>
                        </div>
                    </div>
                    <div class="btns-group pt-5">
                        <a href="#" class="btn btn-prev">Atras</a>
                        <input type="submit" value="Ingresar Datos" class="btn" id="btn_ingresar" />
                    </div>
                </div>
                <!-- Step-Completado -->
                <div class="form-step">
                    <div class="container d-flex justify-content-center text-center text-black m-30">
                        <h2>Los datos se ingresaron correctamente!!</h2>
                        <a href="/secretaria/registro/estudiante" type="button" class="btn btn-block"
                            id="btn-recargar">Recargar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>