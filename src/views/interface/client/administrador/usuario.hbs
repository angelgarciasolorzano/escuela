<div id="toast-notificacion"></div>
<div class="container py-3">
  <div class="p-2">
    <div class="card shadow bg-body-tertiary rounded">
      <div class="card-body d-flex justify-content-start align-items-center" style="color: #0d2033;">
        <i class="fa-solid fa-users-gear px-2" style="font-size: 25px;"></i>
        <h2 class="m-0">Usuarios:</h2>
      </div>
    </div>
  </div>
  <div class="p-2">
    <div class="row g-4">
      <div class="col-md-12">
        <div class="card shadow bg-body-tertiary rounded">
          <div class="card-header color-background">
            <h4 class="text-white text-center fw-semibold m-0" id="txt-accion">Registrar Usuario:</h4>
          </div>
          <div class="card-body">
            <div class="row g-3" id="form-usuario">
              <div class="col-md-4 position-relative">
                <label for="inputText" class="form-label">Nombres:</label>
                <input name="nombres_usuario" type="text" class="form-control border border-secondary"
                  id="nombres-usuario" placeholder="Juan Pablo" required>
                <div class="invalid-tooltip">
                  Error!
                </div>
              </div>
              <div class="col-md-4 position-relative">
                <label for="inputText" class="form-label">Apellidos:</label>
                <input name="apellidos_usuario" type="text" class="form-control border-secondary" id="apellidos-usuario"
                  placeholder="Zamora Ulises" required>
                <div class="invalid-tooltip">
                  Error!
                </div>
              </div>
              <div class="col-md-4 position-relative">
                <label for="inputText" class="form-label">Cédula:</label>
                <input name="cedula_usuario" type="text" class="form-control border-secondary" id="cedula-usuario"
                  placeholder="000-011280-0000B" required>
                <div class="invalid-tooltip">
                  Error!
                </div>
              </div>
              <div class="col-md-4 position-relative">
                <label for="inputAddress" class="form-label">Correo-e:</label>
                <input name="correo_e_usuario" type="text" class="form-control border-secondary" id="correo-usuario"
                  placeholder="juan_pablo12@gmail.com" required>
                <div class="invalid-tooltip">
                  ¡Error!
                </div>
              </div>
              <div class="col-md-4 position-relative">
                <label for="inputPassword" class="form-label">Contraseña:</label>
                <div class="d-flex flex-row">
                  <input name="contrasena_usuario" type="text" class="form-control border-secondary"
                    id="contrasena-usuario" placeholder="XXXXXXXX" required>
                  <div class="invalid-tooltip">
                    ¡Error!
                  </div>
                  <button type="button" class="btn btn-primary" id="btn-generar">Generar</button>
                </div>
              </div>
              <div class="col-md-4 position-relative">
                <label for="inputState" class="form-label">Género:</label>
                <select name="sexo_usuario" id="sexo-usuario" class="form-select border border-secondary">
                  <option selected disabled value="">Elegir...</option>
                  <option value="M">Masculino</option>
                  <option value="F">Femenino</option>
                </select>
                <div class="invalid-tooltip">
                  ¡Error!
                </div>
              </div>
              <div class="col-md-6 position-relative">
                <label for="inputNumber" class="form-label">Teléfono:</label>
                <input name="telefono_usuario" type="text" class="form-control border-secondary" id="telefono-usuario"
                  placeholder="84125477" required>
                <div class="invalid-tooltip">
                  ¡Error!
                </div>
              </div>
              <div class="col-md-6 position-relative">
                <label for="inputState" class="form-label">Rol:</label>
                <select name="rol_usuario" id="rol-usuario" class="form-select border border-secondary">
                  <option selected disabled value="">Elegir...</option>
                  {{#if rol}}
                  {{#each rol}}
                  <option value={{this.id_rol}}>{{this.nombre_rol}}</option>
                  {{/each}}
                  {{/if}}
                </select>
                <div class="invalid-tooltip">
                  ¡Error!
                </div>
              </div>
              <div class="col-12 position-relative">
                <label for="inputText" class="form-label">Dirección:</label>
                <input name="direccion_usuario" type="text" class="form-control border-secondary" id="direccion-usuario"
                  placeholder="municipio, distrito-barrio, casa#" required>
                <div class="invalid-tooltip">
                  ¡Error!
                </div>
              </div>
            </div>
            <div class="text-center pt-3">
              <button type="button" class="btn btn-danger d-none mx-auto w-30px" id="btn-cancelar_edit">Cancelar</button>
              <button type="button" class="btn btn-warning d-none mx-auto w-30px" id="btn-guardar_edit">Guardar</button>
              <button class="btn btn-success btn-block" id="btn-registrar">Registrar</button>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-12 mx-auto">
        <div class="card">
          <div class="card shadow bg-body-tertiary rounded">
            <div class="card-header color-background">
              <h4 class="text-white text-center fw-semibold m-0">Historial Reciente:</h4>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-striped table-bordered nowrap" id="dt-usuario" style="width: 100%;">
                  <thead class="table-dark">
                    <tr>
                      <th class="text-center">Id</th>
                      <th>Nombres</th>
                      <th>Apellidos</th>
                      <th class="text-center">Rol</th>
                      <th class="text-center">Estado</th>
                      <th class="text-center">Cedula</th>
                      <th class="text-center">Accion</th>
                    </tr>
                  </thead>
                  <tbody></tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- modal-message -->
<div id="crearModal"></div>
