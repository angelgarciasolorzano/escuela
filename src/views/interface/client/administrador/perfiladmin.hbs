<style>
    .cards {
        width: 100%;
        padding: 35px 20px;
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-gap: 20px;
    }

    .cards .card {
        padding: 20px;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        background-color: #ffff;
        border-radius: 10px;
        box-shadow: 0 7px 25px rgba(0, 0, 0, 0.08);
    }

    .cards .card:hover {
        background: #2069A1;
    }

    .cards .card:hover .number {
        color: #ffff;
    }

    .cards .card:hover .card-name {
        color: #ffff;
    }

    .cards .card:hover .icon-box i {
        color: #ffff;
    }

    .number {
        font-size: 35px;
        font-weight: 500;
        color: #2069A1;
    }

    .card-name {
        color: #888;
        font-weight: 600;
    }

    .icon-box i {
        font-size: 45px;
        color: #2069A1;
    }

    @media (max-width:880px) {
        .cards {
            width: 100%;
            padding: 35px 20px;
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            grid-gap: 20px;
        }
    }

    @media (max-width:500px) {
        .cards {
            grid-template-columns: 1fr;
        }
    }
</style>

