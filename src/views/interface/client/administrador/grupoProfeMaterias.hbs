<div id="toast-notificacion"></div>
<div class="container py-3">
  <div class="p-2">
    <div class="card shadow bg-body-tertiary rounded">
      <div class="card-body d-flex justify-content-start align-items-center" style="color: #0d2033;">
        <i class="fa-solid fa-chalkboard px-2" style="font-size: 25px;"></i>
        <h2 class="m-0">Grupos:</h2>
      </div>
    </div>
  </div>
  <div class="p-2">
    <div class="row g-4">
      <div class="col-md-12">
        <div class="card shadow bg-body-tertiary rounded" id="card-asignarMateria">
          <div class="card-header color-background">
            <h4 class="text-white text-center fw-semibold m-0" id="txt-accion">Asignar Materias y Profesores:</h4>
          </div>
          <div class="card-body">
            <div class="row g-2">
              <div class="col-md-12">
                <div class="card">
                  <div class="card-body">
                    <label for="inputText" class="form-label text-start fs-3 p-2 mb-0" style="color:#2069A1;">Grupos
                        disponibles:</label>
                    <div class="d-flex flex-column mb-3 justify-content-center" id="form-grupoGuia">
                      <div class="row align-items-center">
                        <div class="col-md-4 position-relative py-2" id="btn-grupos">
                          <label for="inputState" class="form-label">Grupo:</label>
                          <select class="form-select border-secondary" name="grupos" id="grupos" required>
                            <option selected disabled value="">Elegir...</option>
                          </select>
                          <div class="invalid-tooltip">
                            ¡Falta Seleccionar!
                          </div>
                        </div>
                        <div class="col-md-4 position-relative py-2" id="btn-materia">
                          <label for="inputState" class="form-label">Materias:</label>
                          <select class="form-select border-secondary" name="materia" id="materia" required>
                            <option selected disabled value="">Elegir...</option>
                          </select>
                          <div class="invalid-tooltip">
                            ¡Falta Seleccionar!
                          </div>
                        </div>
                        <div class="col-md-4 position-relative py-2" id="btn-profesor">
                          <label for="inputState" class="form-label">Profesores:</label>
                          <select class="form-select border-secondary" name="profesor" id="profesor" required disabled>
                            <option selected disabled value="">Elegir...</option>
                          </select>
                          <div class="invalid-tooltip">
                            ¡Falta Seleccionar!
                          </div>
                        </div>
                        
                      </div>
                    </div>
                    <div class="col-md-4 pb-2">
                        <label for="inputText" class="form-label">Profesor Guia:</label>
                        <input name="profesor_guia" type="text" class="form-control border-secondary" id="profesor-guia"
                          placeholder="">
                      </div>
                      <div class="col-md-4 pb-2" id="btn-profesorMateria">
                          <label for="inputState" class="form-label">Profesor Guia Materias:</label>
                          <select class="form-select border-secondary" name="profesor" id="profesorMateria">
                          </select>
                        </div>
                    <div class="text-center py-2">
                          <button class="btn btn-success" id="btn-asignarGrupoProfMate">Asignar</button>
                        </div>
                  </div>
                </div>
              </div><!--Card para ingresar grupo guia-->
              <div class="col-md-12">
                <div class="card">
                  <div class="card-body">
                    <h1 class="fs-3" style="color:#2069A1;">Grupos Recientes:</h1>
                    <div class="table-responsive">
                      <table class="table table-striped table-bordered nowrap" id="dt-grupoProfeMate" style="width: 100%;">
                        <thead class="table-dark">
                          <tr>
                            <th class="text-center">Id</th>
                            <th>Grupo</th>
                            <th class="text-center">Materia</th>
                            <th class="text-center">Profesor</th>
                            <th class="text-center">Acciones</th>
                          </tr>
                        </thead>
                        <tbody></tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div><!--Card para visualizar grupo guia -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
