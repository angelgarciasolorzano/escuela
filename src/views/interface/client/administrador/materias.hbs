<div id="toast-notificacion"></div>
<div class="container py-3">
  <div class="p-2">
    <div class="card shadow bg-body-tertiary rounded">
      <div class="card-body d-flex justify-content-start align-items-center" style="color: #0d2033;">
        <i class="fa-solid fa-book-open px-2" style="font-size: 25px;"></i>
        <h2 class="m-0">Académico:</h2>
      </div>
    </div>
  </div>
  <div class="p-2">
    <div class="row g-4">
      <div class="col-md-12">
        <div class="card shadow bg-body-tertiary rounded" id="card-Materia">
          <div class="card-header color-background">
            <h3 class="text-white text-center fw-semibold m-0" id="txt-accion">Materias:</h3>
          </div>
          <div class="card-body">
            <div class="row g-4">
              <div class="col-md-6">
                <div class="card">
                  <div class="card-body">
                    <h1 class="fs-3" style="color:#2069A1;" id="txt-accion">Agregar Materia:</h1>
                    <div class="d-flex flex-column mb-3" id="form-materia">
                      <div class="position-relative">
                        <label for="inputText" class="form-label text-start fs-5 p-2 mb-0">Materia:</label>
                        <input name="nombre_materia" type="text" class="form-control border border-secondary p-2"
                          id="nombre-materia" placeholder="lengua y literatura" required>
                        <div class="invalid-tooltip">
                          ¡Esta vacío!
                        </div>
                      </div>
                      <div class="p-2 text-center">
                        <button class="btn btn-success" id="btn-agregarMateria">Agregar</button>
                      </div>
                    </div>
                  </div>
                </div>
              </div><!--Card para crear materias-->
              <div class="col-md-6">
                <div class="card">
                  <div class="card-body">
                    <h1 class="fs-3" style="color:#2069A1;">Materias recientes:</h1>
                    <div class="table-responsive">
                      <table class="table table-striped table-bordered nowrap" id="dt-materia" style="width: 100%;">
                        <thead class="table-dark">
                          <tr>
                            <th class="text-center">Id</th>
                            <th>Materia</th>
                            <th class="text-center">Fecha</th>
                            <th class="text-center">Acciones</th>
                          </tr>
                        </thead>
                        <tbody></tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div><!--Card para visualizar el registro de materias-->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Modal Estudiante -->
<div class="modal fade" id="editMateriaModal" tabindex="-1" aria-labelledby="editMateriaLabel" aria-hidden="true"
  role="document">
  <div class="modal-dialog modal-fullscreen-sm modal-dialog-centered modal-sm">
    <div class="modal-content">
      <div class="modal-header color-background">
        <h5 class="modal-title text-white" id="editMateriaLabel">Editar Materia:</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="container container-fluid">
          <div class="row">
            <div class="col-sm">
              <div class="d-flex flex-column mb-3" id="form-materia">
                <div class="position-relative">
                  <label for="inputText" class="form-label text-start fs-5 p-2 mb-0">Materia:</label>
                  <input name="nombre_materia_edit" type="text" class="form-control border border-secondary p-2"
                    id="nombre-materia-edit" placeholder="Lengua y Literatura" required>
                  <div class="invalid-tooltip">
                    ¡Esta vacío!
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
          <button id="btn-aceptar-editMateria" class="btn btn-primary">Guardar</button>
        </div>
      </div>
    </div>
  </div>
</div>
